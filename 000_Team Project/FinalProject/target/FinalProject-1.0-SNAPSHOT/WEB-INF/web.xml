<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ctbs.xhtml</welcome-file>
    </welcome-file-list>

       <security-constraint>
        <web-resource-collection>
            <web-resource-name>kenneth</web-resource-name>
            <url-pattern>/kenneth/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>kenneth</role-name>
            <role-name>anthony</role-name>
            <role-name>kevin</role-name>
            <role-name>mark</role-name>
            <role-name>chandler</role-name>
            <role-name>jose</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>mark</web-resource-name>
            <url-pattern>/mark/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>mark</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>anthony</web-resource-name>
            <url-pattern>/anthony/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>anthony</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>kevin</web-resource-name>
            <url-pattern>/kevin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>kevin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>jose</web-resource-name>
            <url-pattern>/jose/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>jose</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>chandler</web-resource-name>
            <url-pattern>/chandler/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>chandler</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>mark</role-name>
    </security-role>
    <security-role>
        <role-name>anthony</role-name>
    </security-role>
    <security-role>
        <role-name>kevin</role-name>
    </security-role>
    <security-role>
        <role-name>jose</role-name>
    </security-role>
    <security-role>
        <role-name>chandler</role-name>
    </security-role>
</web-app>
